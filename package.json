{
  "author": "Goran Gligorin <goran@gligorin.com> (https://www.gorangligorin.com)",
  "bin": {
    "gligoran": "./bin/card.js"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.6.2"
  },
  "description": "A personal card for Goran Gligorin (@gligoran)",
  "devDependencies": {
    "ava": "6.4.1",
    "c8": "10.1.3",
    "husky": "9.1.7",
    "semantic-release": "25.0.2",
    "sinon": "21.0.1",
    "strip-ansi": "7.1.2",
    "xo": "1.2.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": "./bin/card.js",
  "keywords": [],
  "license": "MIT",
  "name": "gligoran",
  "c8": {
    "all": true,
    "include": [
      "bin/card.js"
    ],
    "check-coverage": true,
    "100": true,
    "per-file": true,
    "reporter": [
      "text",
      "lcov"
    ]
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gligoran/gligoran.git"
  },
  "scripts": {
    "clean": "rm -rf .nyc_output coverage dist",
    "coverage": "c8 npm test",
    "lint": "xo",
    "lint:fix": "npm run lint -- --fix",
    "start": "node ./bin/card.js",
    "test": "npm run lint && ava",
    "test:watch": "npm test -- --watch",
    "wipe": "npm run clean && rm -rf node_modules"
  },
  "type": "module",
  "version": "0.0.0",
  "volta": {
    "node": "20.20.0",
    "npm": "10.9.4"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "capitalized-comments": [
        "error",
        "never",
        {
          "ignoreConsecutiveComments": true,
          "ignoreInlineComments": true,
          "ignorePattern": "pragma|ignore|prettier-ignore"
        }
      ]
    },
    "semicolon": true,
    "space": true
  }
}
