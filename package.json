{
  "author": "Goran Gligorin <goran@gligorin.com> (https://www.gorangligorin.com)",
  "bin": {
    "gligoran": "./bin/card.js"
  },
  "dependencies": {
    "boxen": "^7.0.1",
    "chalk": "^5.0.0"
  },
  "description": "A personal card for Goran Gligorin (@gligoran)",
  "devDependencies": {
    "ava": "6.1.3",
    "codecov": "3.8.3",
    "husky": "9.0.11",
    "nyc": "15.1.0",
    "semantic-release": "22.0.12",
    "sinon": "17.0.1",
    "strip-ansi": "7.1.0",
    "xo": "0.58.0"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "exports": "./bin/card.js",
  "keywords": [],
  "license": "MIT",
  "name": "gligoran",
  "nyc": {
    "branches": 100,
    "check-coverage": true,
    "functions": 100,
    "include": [
      "bin/card.js"
    ],
    "lines": 100,
    "per-file": true,
    "statements": 100
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gligoran/gligoran.git"
  },
  "scripts": {
    "clean": "rm -rf .nyc_output coverage dist",
    "coverage": "nyc npm test",
    "lint": "xo",
    "lint:fix": "npm run lint -- --fix",
    "postcoverage": "nyc check-coverage",
    "report-coverage": "nyc report --reporter=lcov",
    "start": "node ./bin/card.js",
    "test": "npm run lint && ava",
    "test:watch": "npm test -- --watch",
    "upload-coverage": "codecov",
    "wipe": "npm run clean && rm -rf node_modules"
  },
  "type": "module",
  "version": "0.0.0",
  "volta": {
    "node": "20.12.2",
    "npm": "10.7.0"
  },
  "xo": {
    "envs": [
      "es2021",
      "node"
    ],
    "prettier": true,
    "rules": {
      "capitalized-comments": [
        "error",
        "never",
        {
          "ignoreConsecutiveComments": true,
          "ignoreInlineComments": true,
          "ignorePattern": "pragma|ignore|prettier-ignore"
        }
      ]
    },
    "space": true
  }
}
